<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/usb_connection"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/received_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/usb_connection"
        android:textColor="@android:color/black" />

    <Button android:id="@+id/straightButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="sendStraight"
        android:text="@string/straight"/>

    <Button android:id="@+id/leftButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="sendLeft"
        android:text="@string/left"/>

    <Button android:id="@+id/rightButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="sendRight"
        android:text="@string/right"/>

</LinearLayout>