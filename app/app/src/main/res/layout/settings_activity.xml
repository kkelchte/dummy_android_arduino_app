<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <Button android:id="@+id/mButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onClick" android:text="Send"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/connection_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:gravity="end"
        android:text="@string/no_device"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/baud_rate_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:entries="@array/baud_rates"
        android:prompt="@string/baud_rate" />

</RelativeLayout>